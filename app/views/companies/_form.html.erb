<%= form_for @company do |f| %>

	<%if @company.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@company.errors.count, "error") %> prevented company from being saved:
			</h2>
			<ul>
				<% @company.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		Company Name <%= f.text_field :company_name %>
	</p>
	<p>
		Number of Employees <%= f.number_field :number_of_employees %>
	</p>
	<p>
		Logo <%= f.file_field :logo %>
	</p>
	<p>
		Slogan <%= f.text_field :slogan %>
	</p>
	<p>
		Cultural Values <%= f.text_field :cultural_values %>
	</p>
	<p>
		Country <%= f.text_field :country %>
	</p>
	<p>
		Phone Number <%= f.telephone_field :phone_number %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>